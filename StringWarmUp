public void pigLatinAy(String str) {
		
		
		System.out.println(str.substring(1)+str.charAt(0)+"ay");
		
		
		
		
	}
	
	public void noClueCombineWords(String str, char h) {
		
		for(int i = 0; i<str.length(); i++) {
			System.out.print(str.charAt(i)==h?"$":str.charAt(i));
			
		}
			
		
	}
	
	public void longest(String[]arr) {
		String max="";
		
		for(int i= 0; i<arr.length;i++) {
			if(arr[i].length()> max.length()) {
				max =arr[i];
			}
			
		}
		System.out.println(max);
		
		
	
	}
	
